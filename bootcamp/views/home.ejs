
  <title>Welcome to Placement Cell</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: rgb(200, 222, 233);
      background: linear-gradient(180deg, rgba(200, 222, 233, 1) 0%, rgba(117, 164, 180, 1) 80%);
      overflow: hidden;
    }

    .message-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .message {
      text-align: center;
      font-size: 40px;
      color: #fff; /* Change this to your desired text color */
      margin-top: 5px;
      padding: 20px;
      border-radius: 8px;
      background-color: rgba(0, 0, 0, 0.5); /* Semi-transparent background color for the message */
      animation: throwMessage 1s ease-in-out;
    }

    @keyframes throwMessage {
      0%, 100% {
        transform: translateY(100%);
        opacity: 0;
      }
      50% {
        transform: translateY(-30%);
        opacity: 1;
      }
    }
  </style>
</head>
<body>
  <div class="message-container">
    <h1 class="message">Welcome to Placement Cell</h1>
  </div>

  <script>
    // Function to repeat animation every 3 seconds
    function repeatAnimation() {
      const message = document.querySelector('.message');
      message.style.animation = 'none';
      void message.offsetWidth; // Trigger a reflow, canceling the animation
      message.style.animation = null;
      setTimeout(repeatAnimation, 3000); // Repeat after 3 seconds
    }

    // Start the animation
    repeatAnimation();
  </script>
