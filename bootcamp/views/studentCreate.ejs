
    <title>Add Student</title>
   <style>
    body {
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
    background-color: #f2f2f2;
}

.add-student-form {
    width: 400px;
    margin: 50px auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

h2 {
    text-align: center;
    margin-bottom: 20px;
}

.form-group {
    margin-bottom: 20px;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="text"],
input[type="email"],
input[type="number"],
select { /* Include select in the styles */
    width: 100%;
    padding: 10px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
}

input[type="submit"] {
    width: 100%;
    padding: 10px;
    font-size: 16px;
    background-color: #0b0c0c;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
}

input[type="submit"]:hover {
    background-color: #032c36;
}

@media (max-width: 500px) {
    .add-student-form {
        width: 80%;
    }
}

   </style>
</head>
<body>
    <% if(locals.user){%>
    <form action="/students/addStudent" method="POST" class="add-student-form">
        <h2>Add Student</h2>
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" placeholder="Enter Name" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" placeholder="Enter Email" required>
        </div>
        <div class="form-group">
            <label for="college">College:</label>
            <input type="text" name="college" id="college" placeholder="Enter College" required>
        </div>
        <div class="form-group">
            <label for="batch">Batch:</label>
            <input type="text" name="batch" id="batch" placeholder="Enter Batch" required>
        </div>
        <div class="form-group">
            <label for="status">Select Result:</label>
            <select name="status" required>
                <option value="placed">Placed</option>
                <option value="not_placed">Not Placed</option>
            </select>
        </div>
        <div class="form-group">
            <label for="dsaFinalScore">DSA Final Score:</label>
            <input type="number" name="dsaFinalScore" id="dsaFinalScore" placeholder="Enter DSA Final Score" required>
        </div>
        <div class="form-group">
            <label for="webDFinalScore">Web D Final Score:</label>
            <input type="number" name="webDFinalScore" id="webDFinalScore" placeholder="Enter Web D Final Score" required>
        </div>
        <div class="form-group">
            <label for="reactFinalScore">React Final Score:</label>
            <input type="number" name="reactFinalScore" id="reactFinalScore" placeholder="Enter React Final Score" required>
        </div>
        <div class="form-group">
            <input type="submit" value="Submit">
        </div>
    </form>
    <%}%>

