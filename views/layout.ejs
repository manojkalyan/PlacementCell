<html>
<head>
    <title></title>
<link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">

<script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
<style></style>
    <%- style %>

    
</head>
<body>
   
     <%- include('_header'); %>
    

      <%- body %>

<script>
      <% if(flash.success && flash.success.length>0){%>
new Noty({
  theme:'relax',
  // text is used to display success messages
  text: "<%= flash.success %>",
   type:'success',
   layout:'topRight',
   timeout: 1000
}).show();
<% } %>
<% if(flash.error && flash.error.length>0){%>
new Noty({
  theme:'relax',
  // text is used to display success messages
  text: "<%= flash.error %>",
   type:'error',
   layout:'topRight',
   timeout: 1000
}).show();
<% } %>

</script>
        </script>
</body>

</html>