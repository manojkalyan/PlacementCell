<style>
    body {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
  background-color: #f2f2f2;
}

.company-list {
  max-width: 600px;
  margin: 20px auto;
  padding: 20px;
  border: 1px solid #dddddd;
  border-radius: 8px;
  background-color: #fff;
}

ul {
  list-style: none;
  padding: 0;
}

.company-list li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.company-list a {
  padding: 5px 10px;
  color: #fff;
  background-color: #032c36;
  text-decoration: none;
  border-radius: 4px;
}

/* Apply hover effect to the delete button */
.company-list a:hover {
  background-color: #081d22;
}

/* Media Query for smaller screens */
@media (max-width: 576px) {
  .company-list {
    padding: 15px;
  }

  .company-list li {
    flex-direction: column;
    align-items: flex-start;
    padding: 15px 0;
  }

  .company-list a {
    margin-top: 10px;
  }
}

</style>








<% if (locals.user) { %>

  <div class="company-list">
    <h1>List Of Company </h1>
    <ul>
      <% for (companies of company) { %>
        <li>
          <%= companies.name %>
        </li>
      <% } %>
    </ul>
  </div>
<% } %>
